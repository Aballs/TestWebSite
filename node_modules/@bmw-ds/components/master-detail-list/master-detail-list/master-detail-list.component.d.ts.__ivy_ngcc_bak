import { AfterViewInit, ElementRef, OnDestroy, QueryList, OnInit } from '@angular/core';
import { MasterDetailListRowComponent } from '../master-detail-list-row/master-detail-list-row.component';
import { MasterDetailListDetailComponent } from '../master-detail-list-detail/master-detail-list-detail.component';
export declare class MasterDetailListComponent implements OnDestroy, OnInit, AfterViewInit {
    items: ElementRef;
    id: string;
    childItemsComponent: QueryList<MasterDetailListRowComponent>;
    listDetails: QueryList<MasterDetailListDetailComponent>;
    private _smallStyle;
    get smallStyle(): boolean;
    set smallStyle(value: boolean);
    get masterDetail(): any;
    set hasDetailView(value: boolean);
    private _hasDetailView;
    ngOnInit(): void;
    ngAfterViewInit(): void;
    selectOne(selectItem: MasterDetailListRowComponent): void;
    ngOnDestroy(): void;
    private updateScrollToSelected;
}
